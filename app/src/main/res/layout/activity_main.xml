<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activity.MainActivity"
    android:orientation="vertical">



    <xyz.yapapa.recipe.ui.component.DrawingView
        android:id="@+id/main_drawing_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.85"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="@color/colorPrimary">

        <xyz.yapapa.recipe.ui.component.SquareImageView
            android:id="@+id/prev_pic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:scaleType="fitXY"
            ads:srcCompat="@android:drawable/ic_media_previous"
            android:padding="@dimen/button_padding"
            android:clickable="true"
            android:background="?attr/selectableItemBackgroundBorderless"/>

        <xyz.yapapa.recipe.ui.component.SquareImageView
            android:id="@+id/share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            ads:srcCompat="@android:drawable/ic_menu_share"
            android:scaleType="fitXY"
            android:padding="@dimen/button_padding"
            android:clickable="true"
            android:background="?attr/selectableItemBackgroundBorderless"/>


        <xyz.yapapa.recipe.ui.component.SquareImageView
            android:id="@+id/main_color_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:scaleType="fitXY"
            android:src="@drawable/ic_palette_white_24dp"
            android:padding="@dimen/button_padding"
            android:clickable="true"
            android:background="?attr/selectableItemBackgroundBorderless"/>

        <xyz.yapapa.recipe.ui.component.SquareImageView
            android:id="@+id/main_stroke_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:scaleType="fitXY"
            android:src="@drawable/ic_gesture_white_24dp"
            android:padding="@dimen/button_padding"
            android:clickable="true"
            android:background="?attr/selectableItemBackgroundBorderless"/>

        <xyz.yapapa.recipe.ui.component.SquareImageView
            android:id="@+id/main_undo_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:scaleType="fitXY"
            android:src="@drawable/ic_undo_white_24dp"
            android:padding="@dimen/button_padding"
            android:clickable="true"
            android:background="?attr/selectableItemBackgroundBorderless"/>

        <xyz.yapapa.recipe.ui.component.SquareImageView
            android:id="@+id/delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:scaleType="fitXY"
            ads:srcCompat="@android:drawable/ic_menu_delete"
            android:padding="@dimen/button_padding"
            android:clickable="true"
            android:background="?attr/selectableItemBackgroundBorderless"/>

        <xyz.yapapa.recipe.ui.component.SquareImageView
            android:id="@+id/main_redo_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:scaleType="fitXY"
            android:src="@drawable/ic_redo_white_24dp"
            android:padding="@dimen/button_padding"
            android:clickable="true"
            android:background="?attr/selectableItemBackgroundBorderless"/>



        <xyz.yapapa.recipe.ui.component.SquareImageView
            android:id="@+id/next_pic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:scaleType="fitXY"
            ads:srcCompat="@android:drawable/ic_media_next"
            android:padding="@dimen/button_padding"
            android:clickable="true"
            android:background="?attr/selectableItemBackgroundBorderless"/>
    </LinearLayout>

    <com.google.android.gms.ads.AdView
        android:id="@+id/adView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        ads:adSize="SMART_BANNER"
        ads:adUnitId="ca-app-pub-2888343178529026/4130212594">
    </com.google.android.gms.ads.AdView>
</LinearLayout>
